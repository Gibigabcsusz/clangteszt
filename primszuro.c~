#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

typedef struct elem {
	int val;
	elem* kovi;
}elem_t;

int main(){
	bool lehetPrim;
	int hatar;
	int counter=1;
	elem_t* aktualElemPtr;

	elem_t* fej=NULL; // linkelt lista feje
	fejPtr = (elem_t*) malloc(sizeof(elem_t));

	printf("Határ: "); // felső határérték beolvasása
	scanf("%d",&hatar);

	printf("\n\nPrímek %d-ig:\n\n", &hatar); // prímek felsorolása
	if(hatar > 1)
		printf("1.  2\n");

	for(int i=3; i<hatar; i+=2){
		lehetPrim=true;
		aktualElemPtr = fejPtr;
		while(aktualElemPtr != NULL && lehetPrim){
			
		}
		if(lehetPrim){
			counter++;
			printf("%d.  %d\n",counter,i);
		}
	}
	free(fej);
	return 0;
}
